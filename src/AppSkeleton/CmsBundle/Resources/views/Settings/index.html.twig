{% extends '::base.html.twig' %}

{% block breadcrumb %}
	<li>
		<a href="#">settings</a> <span class="divider">/</span>
	</li>
{% endblock %}

{% block body -%}
	<h1>Settings list</h1>

	<table class="records_list">
		<thead>
		<tr>
			<th>Id</th>
			<th>Key</th>
			<th>Value</th>
			<th>Title</th>
			<th>Description</th>
			<th>Inputtype</th>
			<th>Editable</th>
			<th>Params</th>
			<th>Updated</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		{% for entity in entities %}
			<tr>
				<td><a href="{{ path('settings_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
				<td>{{ entity.key }}</td>
				<td>{{ entity.value }}</td>
				<td>{{ entity.title }}</td>
				<td>{{ entity.description }}</td>
				<td>{{ entity.inputType }}</td>
				<td>{{ entity.editable }}</td>
				<td>{{ entity.params }}</td>
				<td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
				<td>
					<ul>
						<li>
							<a href="{{ path('settings_show', { 'id': entity.id }) }}">show</a>
						</li>
						<li>
							<a href="{{ path('settings_edit', { 'id': entity.id }) }}">edit</a>
						</li>
					</ul>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<ul>
		<li>
			<a href="{{ path('settings_new') }}">
				Create a new entry
			</a>
		</li>
	</ul>
{% endblock %}
