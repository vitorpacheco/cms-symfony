{% extends 'AppSkeletonCmsBundle::base.html.twig' %}

{% block breadcrumb %}
	<li>
		<a href="{{ path('posts') }}">posts</a> <span class="divider">/</span>
	</li>
	<li>
		<a href="#">new</a> <span class="divider">/</span>
	</li>
{% endblock %}

{% block body -%}
	<div class="row-fluid">

		<div class="box span12">
			<div class="box-header" data-original-title>
				<h2><i class="icon-plus"></i><span class="break"></span>Post creation</h2>
			</div>

			<div class="box-content">
				<form action="{{ path('posts_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
					<fieldset>
						<div class="control-group">
							<label class="control-label" for="{{ form.type.vars.full_name }}">{{ form.type.vars.name|capitalize }}</label>
							<div class="controls">
								{{ form_widget(form.type, { 'attr': {'class': 'input-xlarge required'} }) }}
							</div>
							<p class="help-block">{{ form_errors(form.type) }}</p>
						</div>

						<div class="control-group">
							<label class="control-label" for="{{ form.parent.vars.full_name }}">{{ form.parent.vars.name|capitalize }}</label>
							<div class="controls">
								{{ form_widget(form.parent, { 'attr': {'class': 'input-xlarge required'} }) }}
							</div>
							<p class="help-block">{{ form_errors(form.parent) }}</p>
						</div>

						<div class="control-group">
							<label class="control-label" for="{{ form.title.vars.full_name }}">{{ form.title.vars.name|capitalize }}</label>
							<div class="controls">
								{{ form_widget(form.title, { 'attr': {'class': 'input-xlarge required'} }) }}
							</div>
							<p class="help-block">{{ form_errors(form.title) }}</p>
						</div>

						<div class="control-group">
							<label class="control-label" for="{{ form.content.vars.full_name }}">{{ form.content.vars.name|capitalize }}</label>
							<div class="controls">
								{{ form_widget(form.content, { 'attr': { 'class': 'cleditor required' } }) }}
							</div>
							<p class="help-block">{{ form_errors(form.content) }}</p>
						</div>

						<div class="control-group">
							<div class="controls">
								<label class="checkbox inline">
									{{ form_widget(form.promote, { 'attr': {'class': 'required'} }) }}
									{{ form.promote.vars.name|capitalize }}
								</label>

								<label class="checkbox inline">
									{{ form_widget(form.published, { 'attr': {'class': 'required'} }) }}
									{{ form.published.vars.name|capitalize }}
								</label>

								<label class="checkbox inline">
									{{ form_widget(form.statusComments, { 'attr': {'class': 'required'} }) }}
									{{ form.statusComments.vars.label|capitalize }}
								</label>
							</div>
							<p class="help-block">{{ form_errors(form.promote) }}</p>
							<p class="help-block">{{ form_errors(form.published) }}</p>
							<p class="help-block">{{ form_errors(form.statusComments) }}</p>
						</div>

						<div class="form-actions">
							<button type="submit" class="btn btn-primary">Create</button>
							<button type="reset" class="btn">Cancel</button>
						</div>
					</fieldset>
				</form>
			</div>
		</div>

	</div>
{% endblock body %}
