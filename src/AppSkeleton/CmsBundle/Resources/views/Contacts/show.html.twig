{% extends '::base.html.twig' %}

{% block breadcrumb %}
	<li>
		<a href="{{ path('contacts') }}">contacts</a> <span class="divider">/</span>
	</li>
	<li>
		<a href="#">show</a> <span class="divider">/</span>
	</li>
{% endblock %}

{% block body -%}
	<h1>Contacts</h1>

	<table class="record_properties">
		<tbody>
		<tr>
			<th>Id</th>
			<td>{{ entity.id }}</td>
		</tr>
		<tr>
			<th>Firstname</th>
			<td>{{ entity.firstName }}</td>
		</tr>
		<tr>
			<th>Lastname</th>
			<td>{{ entity.lastName }}</td>
		</tr>
		<tr>
			<th>Phone</th>
			<td>{{ entity.phone }}</td>
		</tr>
		<tr>
			<th>Mobile</th>
			<td>{{ entity.mobile }}</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>{{ entity.email }}</td>
		</tr>
		<tr>
			<th>Skype</th>
			<td>{{ entity.skype }}</td>
		</tr>
		<tr>
			<th>Active</th>
			<td>{{ entity.active }}</td>
		</tr>
		<tr>
			<th>Created</th>
			<td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
		</tr>
		<tr>
			<th>Updated</th>
			<td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
		</tr>
		</tbody>
	</table>

	<ul class="record_actions">
		<li>
			<a href="{{ path('contacts') }}">
				Back to the list
			</a>
		</li>
		<li>
			<a href="{{ path('contacts_edit', { 'id': entity.id }) }}">
				Edit
			</a>
		</li>
		<li>
			<form action="{{ path('contacts_delete', { 'id': entity.id }) }}" method="post">
				<input type="hidden" name="_method" value="DELETE" />
				{{ form_widget(delete_form) }}
				<button type="submit">Delete</button>
			</form>
		</li>
	</ul>
{% endblock %}
